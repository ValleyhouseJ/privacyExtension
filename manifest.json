{
    "name": "Privacy Scanner Extension",
    "description": "An extension that scans websites for cookies. It provides users with insights into their online privacy in an easy-to-understand format.",
    "version": "1.3",
    "manifest_version": 3,
    "icons": {
        "16": "assets/icon-16.png",
        "32": "assets/icon-32.png",
        "48": "assets/icon-48.png",
        "128": "assets/icon-128.png"
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "assets/icon-16.png",
            "32": "assets/icon-32.png",
            "48": "assets/icon-48.png",
            "128": "assets/icon-128.png"
        }
    },
    "permissions": [
        "cookies",
        "activeTab",
        "storage"
    ]
}